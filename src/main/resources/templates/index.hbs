{{#partial "content"}}
    {{#if employees}}
        <h3 class="index-title">Employees</h3>
        <div class="table-div">
            <p><span style="color: grey;">Select employee ID to see more details</span></p>
            <table class="table table-hover table-responsive table-sm">
                <thead class="table-info">
                    <tr>
                        <th scope="col">Staff ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Email</th>
                        <th scope="col">Role</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
        {{#each employees }}
                    <tr>
                        <th scope="row"><a href="/employees/{{id}}/{{position_id}}/{{department_id}}">{{staff_id}}</a></th>
                        <td>{{first_name}}</td>
                        <td>{{last_name}}</td>
                        <td>{{phone_no}}</td>
                        <td>{{email}}</td>
                        <td>{{role}}</td>
                    </tr>
        {{/each}}
                    <tr>
                        <td colspan="6"><a href="/employees/delete/all">Delete All Employees</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
     {{else}}
        <p>No Entries!</p>
    {{/if}}
{{/partial}}

{{> layout.hbs}}