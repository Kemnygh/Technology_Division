{{#partial "content"}}

    <table class="table">
        <thead>
        <tr>
            <th scope="col" colspan="2">Employee Details</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row">First Name</th>
            <td>{{employee.first_name}}</td>
        </tr>
        <tr>
            <th scope="row">Last Name</th>
            <td>{{employee.last_name}}</td>
        </tr>
        <tr>
            <th scope="row">Staff ID</th>
            <td>{{employee.staff_id}}</td>
        </tr>
        <tr>
            <th scope="row">Role</th>
            <td>{{employee.role}}</td>
        </tr>
        <tr>
            <th scope="row">Position</th>
            <td>{{position.name}}</td>
        </tr>
        <tr>
            <th scope="row">Department</th>
            <td>{{department.name}}</td>
        </tr>
        <tr>
            <th scope="row" colspan="2"><a href="/employees/{{employee.id}}/edit">EDIT Employee</a>  |  <a href="/employees/{{employee.id}}/delete">DELETE Employee</a></th>
        </tr>
        </tbody>
    </table>

{{/partial}}

{{> layout.hbs}}