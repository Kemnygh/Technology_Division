{{#partial "content"}}
    <h3 class="index-title">{{position.name}}s<br>
        <span class="text-muted" style="font-size: 18px;"><strong>Position Created On:</strong>  {{position.created_at}}</span>
    </h3>
    <div class="table-div">
        <p>Employees:: <span style="color: grey;">Select employee ID to see more details</span></p>
        <table class="table table-hover table-responsive table-sm">
            <thead class="table-info">
                <tr>
                    <th scope="col">Staff ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Role</th>
                    <th scope="col">Date Created</th>
                    <th scope="col">Last Updated</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
            {{#each employees}}
                <tr>
                    <th scope="row"><a href="/employees/{{id}}/{{position_id}}/{{department_id}}">{{staff_id}}</a></th>
                    <td>{{first_name}}</td>
                    <td>{{last_name}}</td>
                    <td>{{role}}</td>
                    <td>{{created_at}}</td>
                    <td>{{updated}}</td>
                </tr>
            {{/each}}
                <tr>
                    <th scope="row" colspan="6"><a href="/employees/new">Create New Employee</a>  |  <a href="/positions/{{position.id}}/edit">Edit Position</a>  |  <a href="/positions/{{position.id}}/delete">DELETE Position</a></th>
                </tr>
            </tbody>
        </table>
    </div>
{{/partial}}

{{> layout.hbs}}